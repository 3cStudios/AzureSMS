@page "/"

<PageTitle>Home</PageTitle>

<h1>Send an SMS message</h1>



<div class="card">

    <EditForm Model="ExampleSmsModel">
        <div class="card-body">
            <div class="mb-3">
                <label>Send message to</label>
                <InputText @bind-Value="ExampleSmsModel.ToPhoneNumber" />
            </div>

            <div class="mb-3">
                <label>Message</label>
                <InputText @bind-Value="ExampleSmsModel.Message" />
            </div>
        </div>
        <div class="card-footer">
            <button @onclick="SendSms">Send</button>
        </div>
    </EditForm>

</div>

